<div class="container fluid">
    <div class="row">
        <% if @pending_audit_logs.count > 0 %>
            <div class="pending-homepage emp-block">
                <h3 class="text-center">Pending Confirmation</h3>
                <%= render partial: 'pending_confirmation', 
                locals: { pending_audit_logs: @pending_audit_logs } %>
            </div>
        <% end %>
        <div class="pending-homepage emp-block">
            <h3 class="text-center">Request Overtime</h3>
            <%= link_to "Request overtime approval", new_post_path, 
            class: "btn btn-block btn-primary" %>
        </div>
    </div>

</div>
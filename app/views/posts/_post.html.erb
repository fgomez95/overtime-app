<tr>
    <td><%= post.id %></td>
    <td><%= link_to truncate(post.rationale), post_path(post) %></td>
    <td><%= post.date %></td>
    <td><%= post.user.full_name %></td>
    <td><%= status_label post.status %></td>
    <td><strong><%= post.overtime_request %></strong></td>
    <td><%= link_to "Edit", edit_post_path(post), id: "edit-post-#{post.id}" if policy(post).update? %></td>
    <td>
    <%= link_to "Delete Post", post_path(post), 
    method: :delete, id: "delete-post-#{post.id}", data: { confirm: 'Are you sure?' } %></td>
</tr>

<h1>Posts</h1>
<table class="table table-hover table-sm">
	<thead>
		<tr>
		    <th>
		        ID
		    </th>
			<th>
			   Rationale
			</th>
			<th>
			   Date
			</th>
			<th>
			    User Name
			</th>
		</tr>
	</thead>
	<tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id %></td>
                <td><%= truncate(post.rationale) %></td>
                <td><%= post.date %></td>
                <td><%= post.user.last_name %></td>
            </tr>
        <% end %>
	</tbody>
</table>

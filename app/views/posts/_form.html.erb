<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error|%>
        <%= js add_gritter(error, title: "Overtime App Notification", sticky: false)%>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rationale %>
    <%= form.text_area :rationale, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :overtime_request %>
    <%= form.number_field :overtime_request, class: "form-control" %>
  </div>
  
  <%= render partial: 'status', locals: {form: form} if current_user.type == 'AdminUser' %>

  <div class="form-group">
    <%= form.submit 'Save', class: "btn btn-primary btn-block" %>
  </div>
<% end %>